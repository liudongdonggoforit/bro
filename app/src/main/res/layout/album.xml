<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="150dp"
    android:background="@drawable/album_shape_transparent"
    android:minWidth="200dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/cardview_default_radius"
        app:cardUseCompatPadding="true"
        app:elevation="0dp">

        <ImageView
            android:id="@+id/album_cover"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:contentDescription="@null"
            android:minWidth="200dp"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/album_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_gravity="right"
            android:src="@drawable/add_channels_close_press" />

        <TextView
            android:id="@+id/album_title"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:background="@color/color_shadow"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:padding="@dimen/layout_margin_8dp"
            android:textColor="@color/color_light" />

    </android.support.v7.widget.CardView>

</FrameLayout>